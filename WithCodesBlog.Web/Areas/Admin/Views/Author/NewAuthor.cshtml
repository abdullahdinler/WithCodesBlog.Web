@model WithCodesBlog.Web.UI.Areas.Admin.ViewModels.AppUserViewModel
@{
    ViewData["Title"] = "Yeni Yazar Ekleme Sayfası";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yeni Yazar Ekle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Yazar İşlemleri</a></li>
                    <li class="breadcrumb-item active">Yeni Yazar Ekle</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"></h4>
            <p class="card-description">  </p>
            <form asp-controller="Author" asp-action="NewAuthor" class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı">
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>

                <div class="form-group">
                    <label>İsim Soyisim</label>
                    <input asp-for="NameSurname" class="form-control" placeholder="İsim Soyisim">
                    <span class="text-danger" asp-validation-for="NameSurname"></span>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" id="exampleInputEmail2" placeholder="Emai">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Şifre</label>
                    <input asp-for="PasswordHash" class="form-control" id="exampleInputEmail3" placeholder="Şİfre">
                    <span class="text-danger" asp-validation-for="PasswordHash"></span>
                </div>

                <div class="form-group">
                    <label for="Image">Yazar Görsel</label>
                    <input type="file" asp-for="ImageUri" class="form-control-file" id="Image">
                    <span class="text-danger" asp-validation-for="ImageUri"></span>
                </div>
                <button type="submit" class="btn btn-outline-success mr-2">Yazarı Ekle</button>
            </form>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
