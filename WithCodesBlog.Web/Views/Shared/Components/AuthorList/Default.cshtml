@model List<AppUser>


<div class="col-lg-12">
    <div class="sidebar-item categories">
        <div class="sidebar-heading">
            <h2>YAZARLAR</h2>
        </div>
        <div class="content">
            <ul>
                @foreach (var item in Model)
                {
                    <li><a asp-controller="Blog" asp-action="BlogByAuthorList" asp-route-authorName="@item.UserName">- @item.NameSurname (@item.Blogs.Count)</a></li>
                }

            </ul>
        </div>
    </div>
</div>
