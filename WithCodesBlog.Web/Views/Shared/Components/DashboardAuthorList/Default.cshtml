@model List<AppUser>


<div class="col-md-6">
    <!-- USERS LIST -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Yazar Listesi</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <ul class="users-list clearfix">

                @foreach (var item in Model.TakeLast(8))
                {
                    <li>
                        <img class="img-size-50" src="@item.ImageUri" alt="@item.NameSurname">
                        <a class="users-list-name" href="/Yazar/@item.UserName">@item.NameSurname</a>
                    </li>
                }


            </ul>
            <!-- /.users-list -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer text-center">
            <a href="/Admin/Author/">Tüm Yazarları Göster</a>
        </div>
        <!-- /.card-footer -->
    </div>
    <!--/.card -->
</div>