@model List<Category>

<div class="col-lg-12">
    <div class="sidebar-item categories">
        <div class="sidebar-heading">
            <h2>Kategoriler</h2>
        </div>
        <div class="content">
            <ul>
                @foreach (var item in Model)
                {
                    <li><a asp-controller="Blog" asp-action="BlogByCategoryList" asp-route-categoryName="@item.Name">- @item.Name (@item.Blogs.Count)</a></li>
                }

            </ul>
        </div>
    </div>
</div>
