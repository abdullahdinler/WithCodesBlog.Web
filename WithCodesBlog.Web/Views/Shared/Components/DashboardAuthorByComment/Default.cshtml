@model List<Comment>
<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Yazar Yorum Listesi</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th class="text-center">Yorum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TakeLast(3))
                    {
                        <tr>
                            <td>@item.UserName</td>
                            <td class="text-center">@item.CommentText</td>
                        </tr>
                    }

                </tbody>
            </table>
            <div class="card-footer text-center">
                <a href="/Admin/Comments/">Tüm Yorumları Göster</a>
            </div>

        </div>
        <!-- /.card-body -->
    </div>

</div>