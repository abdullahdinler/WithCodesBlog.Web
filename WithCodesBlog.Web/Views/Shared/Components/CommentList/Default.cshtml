@model List<Comment>



<div class="col-lg-12">
    <div class="sidebar-item comments">
        @if (Model.Any())
        {
            <div class="sidebar-heading">
                <h2>Yorumlar</h2>
            </div>
            <div class="content">
                <ul>
                    @foreach (var item in Model)
                    {
                        <li>
                            <div class="author-thumb" style="padding-right: 0px;">
                                <img style="padding-right: 0px;" class="img-fluid w-50 h-50" src="/images/avatar.png" alt="@item.UserName">
                            </div>
                            <div class="right-content">
                                <h6>@item.UserName<span>@item.SendingDate.ToString(" dd MMM yyyy")</span></h6>
                                <p>@item.CommentText</p>
                            </div>
                        </li>
                        <br />
                    }
                </ul>
            </div>
        }
        else
        {
            <div class="comment-top">
                <h5>Henüz herhangi bir yorum yok </h5>
                <p>İlk Yorumu sen yapmak istermisin?</p>
            </div>
        }
    </div>
</div>

